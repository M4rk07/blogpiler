{% extends 'base.html.twig' %}

{% block topNavigation %}
    {% include 'parts/top-navigation.html.twig' %}
{% endblock %}

{% block additionalCSS %}
    <!-- Include Editor style. -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.0/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.0/css/froala_style.min.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block container %}

    <div class="container">
        <div class="row b-section-wrapper">

            <div class="col-lg-9">
                <div class="row b-section-wrapper">
                    <div class="col-lg-12">
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" id="postTitle" placeholder="Post title">
                            </div>
                            <div class="form-group">
                                <textarea></textarea>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="row b-section-wrapper">
                    <button type="submit" class="b-btn b-btn-default b-btn-default-filled b-btn-full-width">Publish</button>
                </div>

                <div class="row b-midd-section-title-wrapper">
                    <div class="col-lg-12">
                        <span class="b-midd-section-title">category</span>
                    </div>
                </div>

                <div class="row b-section-wrapper b-section">
                    <div class="col-lg-12" >
                        <a href="#">Add new category</a>
                    </div>
                </div>

                <div class="row b-midd-section-title-wrapper">
                    <div class="col-lg-12">
                        <span class="b-midd-section-title">tags</span>
                    </div>
                </div>

                <div class="row b-section-wrapper b-section">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Tags">
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

{% endblock %}

{% block additionalJavascript %}
    <!-- Include external JS libs. -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/mode/xml/xml.min.js"></script>

    <!-- Include Editor JS files. -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.0/js/froala_editor.pkgd.min.js"></script>

    <!-- Initialize the editor. -->
    <script> $(function() { $('textarea').froalaEditor() }); </script>
{% endblock %}